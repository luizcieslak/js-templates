{
  "name": "node-simple",
  "private": false,
  "version": "0.0.1",
  "description": "A simple node template, with TS and Jest",
  "main": "index.js",
  "dependencies": {
    "@babel/runtime": "7.7.6",
    "axios": "0.19.0",
    "babel-types": "6.26.0",
    "dotenv": "8.2.0",
    "eslint": "6.7.2"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "lint-staged": "9.5.0",
    "nodemon": "2.0.1",
    "prettier": "1.19.1",
    "standard-version": "6.0.1",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.3",
    "typescript-eslint-parser": "22.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "git add"
    ]
  },
  "scripts": {
    "start": "node ./lib/src/index.js",
    "dev": "nodemon ./lib/src/index.js",
    "clean": "rm -rf lib/ && mkdir lib",
    "ts:watch": " tsc --watch",
    "build": "npm run clean && tsc --build tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:staged": "lint-staged",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
